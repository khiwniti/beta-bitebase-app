{
  "name": "bitebase-geospatial-saas",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:frontend": "turbo run dev --filter=bitebase-frontend",
    "dev:api": "turbo run dev --filter=bitebase-api",
    "dev:backend": "turbo run dev --filter=bitebase-backend-production",
    "start": "turbo run start",
    "start:frontend": "turbo run start --filter=bitebase-frontend",
    "start:api": "turbo run start --filter=bitebase-api",
    "start:backend": "turbo run start --filter=bitebase-backend-production",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "install:api": "cd apps/api && pip install -r requirements.txt",
    "setup": "npm install && npm run install:api"
  },
  "dependencies": {
    "turbo": "^2.5.1"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
