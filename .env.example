# =============================================================================
# BiteBase Frontend - Simplified Configuration
# =============================================================================

# Application Configuration
NODE_ENV=development
APP_NAME=BiteBase
APP_VERSION=1.0.0

# External API Configuration (Primary)
NEXT_PUBLIC_API_URL=https://api.bitebase.app

# For local development (if needed)
# NEXT_PUBLIC_API_URL=http://localhost:12001

# Frontend Configuration
NEXT_PUBLIC_APP_URL=http://localhost:12000
NEXT_PUBLIC_MAPBOX_TOKEN=your_mapbox_token_here

# Mapping Services
NEXT_PUBLIC_MAPBOX_TOKEN=your_mapbox_token_here
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Authentication (Optional - if using Firebase)
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id

# Payment Processing (Optional - if using Stripe)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key_here

# Analytics (Optional)
NEXT_PUBLIC_GA_TRACKING_ID=your_google_analytics_id_here

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_BETA_FEATURES=false
