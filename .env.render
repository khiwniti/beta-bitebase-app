# BiteBase Render.com Environment Configuration
# Copy these variables to your Render.com service environment settings

# ============================================================================
# CORE APPLICATION SETTINGS
# ============================================================================
NODE_ENV=production
PORT=10000
HOSTNAME=0.0.0.0

# ============================================================================
# SECURITY CONFIGURATION (REQUIRED - Generate secure 32+ character values)
# ============================================================================
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_ME_TO_SECURE_32_CHAR_SECRET
JWT_REFRESH_SECRET=CHANGE_ME_TO_SECURE_32_CHAR_REFRESH_SECRET
ENCRYPTION_KEY=CHANGE_ME_TO_SECURE_32_CHAR_ENCRYPTION_KEY
SESSION_SECRET=CHANGE_ME_TO_SECURE_32_CHAR_SESSION_SECRET

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# Use Render.com PostgreSQL service or external database
DATABASE_URL=postgresql://user:password@host:port/database
# Optional: Redis for caching (use Render.com Redis or external)
REDIS_URL=redis://user:password@host:port/0

# ============================================================================
# CORS AND FRONTEND CONFIGURATION
# ============================================================================
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com,https://beta.bitebase.app
NEXT_PUBLIC_SITE_URL=https://yourdomain.com
NEXT_PUBLIC_API_URL=https://your-backend-service.onrender.com

# ============================================================================
# AI CONFIGURATION
# ============================================================================
AI_MODE=api
AI_FALLBACK_ENABLED=true
AI_CACHE_TTL=3600
AI_MAX_RETRIES=3

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4096

# Anthropic Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# OpenRouter Configuration (Alternative AI provider)
OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENROUTER_MODEL=anthropic/claude-3-sonnet

# Local AI Configuration (if using external AI servers)
OLLAMA_BASE_URL=https://your-ollama-server.com
VLLM_BASE_URL=https://your-vllm-server.com
MPC_PRIMARY_URL=https://your-mpc-server-1.com
MPC_SECONDARY_URL=https://your-mpc-server-2.com
MPC_TERTIARY_URL=https://your-mpc-server-3.com

# ============================================================================
# PAYMENT PROCESSING (STRIPE)
# ============================================================================
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key

# Stripe Plan IDs
STRIPE_STARTER_PRICE_ID=price_starter_plan_id
STRIPE_PROFESSIONAL_PRICE_ID=price_professional_plan_id
STRIPE_ENTERPRISE_PRICE_ID=price_enterprise_plan_id

# ============================================================================
# EMAIL SERVICES
# ============================================================================
# SendGrid Configuration
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=BiteBase Intelligence

# Email Template IDs (if using SendGrid templates)
SENDGRID_WELCOME_TEMPLATE=d-welcome-template-id
SENDGRID_ONBOARDING_TEMPLATE=d-onboarding-template-id
SENDGRID_TRIAL_EXPIRING_TEMPLATE=d-trial-expiring-template-id

# ============================================================================
# EXTERNAL APIS
# ============================================================================
# Google Services
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
GOOGLE_PLACES_API_KEY=your-google-places-api-key
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Mapbox
MAPBOX_ACCESS_TOKEN=pk.your-mapbox-access-token

# Social Media APIs
FACEBOOK_APP_ID=your-facebook-app-id
TWITTER_API_KEY=your-twitter-api-key
LINKEDIN_CLIENT_ID=your-linkedin-client-id

# ============================================================================
# MONITORING AND ANALYTICS
# ============================================================================
# Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Analytics
MIXPANEL_TOKEN=your-mixpanel-token
AMPLITUDE_API_KEY=your-amplitude-api-key
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Application Performance Monitoring
DATADOG_API_KEY=your-datadog-api-key
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key

# ============================================================================
# FILE STORAGE (AWS S3)
# ============================================================================
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_S3_BUCKET=your-s3-bucket-name
AWS_REGION=us-east-1
AWS_CLOUDFRONT_DOMAIN=your-cloudfront-domain.cloudfront.net

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_PREMIUM_MAX=1000
RATE_LIMIT_AI_MAX=50

# ============================================================================
# ENTERPRISE FEATURES
# ============================================================================
# SSO Configuration
OKTA_DOMAIN=your-okta-domain.okta.com
OKTA_CLIENT_ID=your-okta-client-id
OKTA_CLIENT_SECRET=your-okta-client-secret

# SAML Configuration
SAML_ENTRY_POINT=https://your-saml-provider.com/sso
SAML_ISSUER=your-saml-issuer
SAML_CERT=your-saml-certificate

# ============================================================================
# MARKETING AUTOMATION
# ============================================================================
# HubSpot
HUBSPOT_API_KEY=your-hubspot-api-key
HUBSPOT_PORTAL_ID=your-hubspot-portal-id

# Mailchimp
MAILCHIMP_API_KEY=your-mailchimp-api-key
MAILCHIMP_LIST_ID=your-mailchimp-list-id

# ============================================================================
# BACKUP AND RECOVERY
# ============================================================================
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key
BACKUP_S3_BUCKET=your-backup-s3-bucket
BACKUP_SCHEDULE=0 2 * * *

# ============================================================================
# FEATURE FLAGS
# ============================================================================
FEATURE_AI_RECOMMENDATIONS=true
FEATURE_MARKET_ANALYSIS=true
FEATURE_COMPETITIVE_ANALYSIS=true
FEATURE_CUSTOMER_INSIGHTS=true
FEATURE_WHITE_LABELING=true
FEATURE_SSO=true
FEATURE_MULTI_TENANT=true

# ============================================================================
# PERFORMANCE OPTIMIZATION
# ============================================================================
NODE_OPTIONS=--max-old-space-size=1024
UV_THREADPOOL_SIZE=4
CLUSTER_WORKERS=auto

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_MAX_FILES=10
LOG_MAX_SIZE=10m

# ============================================================================
# LEGACY SUPPORT (for existing integrations)
# ============================================================================
AGENT_FASTAPI_URL=https://bitebase-ai-agents.onrender.com
AGENT_GATEWAY_URL=https://bitebase-ai-gateway.onrender.com

# ============================================================================
# DEVELOPMENT/STAGING OVERRIDES
# ============================================================================
# Uncomment for staging environment
# NODE_ENV=staging
# CORS_ORIGIN=https://staging.yourdomain.com
# NEXT_PUBLIC_SITE_URL=https://staging.yourdomain.com

# ============================================================================
# HEALTH CHECK CONFIGURATION
# ============================================================================
HEALTH_CHECK_TIMEOUT=10000
HEALTH_CHECK_INTERVAL=30000

# ============================================================================
# WEBHOOK CONFIGURATION
# ============================================================================
WEBHOOK_SECRET=your-webhook-secret-for-external-services
WEBHOOK_TIMEOUT=30000

# ============================================================================
# CACHE CONFIGURATION
# ============================================================================
CACHE_TTL=3600
CACHE_MAX_SIZE=100
CACHE_COMPRESSION=true

# ============================================================================
# SECURITY HEADERS
# ============================================================================
CSP_REPORT_URI=https://your-csp-report-endpoint.com
HSTS_MAX_AGE=31536000

# ============================================================================
# API VERSIONING
# ============================================================================
API_VERSION=v1
API_DEPRECATION_NOTICE=false

# ============================================================================
# TIMEZONE
# ============================================================================
TZ=UTC
