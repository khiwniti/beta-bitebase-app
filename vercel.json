{
  "version": 2,
  "name": "bitebase-frontend",
  "builds": [
    {
      "src": "apps/frontend/package.json",
      "use": "@vercel/next",
      "config": {
        "distDir": ".next"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "apps/frontend/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "https://bitebase-backend-api.onrender.com",
    "NEXT_PUBLIC_STRAPI_URL": "https://bitebase-strapi-cms.onrender.com",
    "NEXT_PUBLIC_AGENT_API_URL": "https://bitebase-ai-gateway.onrender.com",
    "NEXT_PUBLIC_SITE_URL": "https://beta.bitebase.app"
  },
  "build": {
    "env": {
      "NEXT_PUBLIC_API_URL": "https://bitebase-backend-api.onrender.com",
      "NEXT_PUBLIC_STRAPI_URL": "https://bitebase-strapi-cms.onrender.com",
      "NEXT_PUBLIC_AGENT_API_URL": "https://bitebase-ai-gateway.onrender.com",
      "NEXT_PUBLIC_SITE_URL": "https://beta.bitebase.app"
    }
  },
  "functions": {
    "apps/frontend/pages/api/**/*.js": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/admin",
      "destination": "https://bitebase-strapi-cms.onrender.com/admin",
      "permanent": false
    }
  ]
}
