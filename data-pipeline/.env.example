# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bitebase
DB_USER=postgres
DB_PASSWORD=password

# Data Lake Configuration
DATALAKE_TYPE=local  # local, s3, minio
DATALAKE_BASE_PATH=./datalake
DATALAKE_BUCKET=bitebase-datalake
DATALAKE_REGION=us-east-1
DATALAKE_ACCESS_KEY=your_access_key
DATALAKE_SECRET_KEY=your_secret_key
DATALAKE_ENDPOINT_URL=http://localhost:9000  # For MinIO

# Scraping Configuration
SCRAPING_DELAY=2.0
SCRAPING_MAX_RETRIES=3
SCRAPING_TIMEOUT=30
SCRAPING_HEADLESS=true
SCRAPING_BROWSER=chromium

# ETL Configuration
ETL_BATCH_SIZE=1000
ETL_MAX_WORKERS=4
ETL_ENABLE_VALIDATION=true
ETL_VALIDATION_SAMPLE_RATE=0.1
ETL_MIN_QUALITY_SCORE=0.8
ETL_MAX_NULL_PERCENTAGE=0.2

# Cron Configuration
CRON_RESTAURANT_SCHEDULE="0 2 * * *"  # Daily at 2 AM
CRON_MENU_SCHEDULE="0 4 * * *"        # Daily at 4 AM
CRON_ETL_SCHEDULE="0 6 * * *"         # Daily at 6 AM
CRON_ENABLE_MONITORING=true
CRON_ALERT_EMAIL=admin@bitebase.com

# Logging Configuration
LOG_LEVEL=INFO
LOG_ROTATION="1 day"
LOG_RETENTION="30 days"
LOG_TO_FILE=true
LOG_TO_CONSOLE=true
LOG_DIRECTORY=./logs

# Monitoring Configuration
PROMETHEUS_PORT=8090
ENABLE_METRICS=true
HEALTH_CHECK_INTERVAL=60
MAX_SCRAPING_FAILURES=5
MAX_ETL_FAILURES=3